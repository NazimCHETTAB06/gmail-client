# ========================================
# GOOGLE OAUTH CONFIGURATION
# ========================================
# Obtener vos credentials en suivant: GOOGLE_OAUTH_SETUP.md
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/gmail/callback

# ========================================
# JWT CONFIGURATION
# ========================================
# Génération: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_to_something_long

# ========================================
# DATABASE CONFIGURATION
# ========================================
# SQLite (défaut - development)
DATABASE_URL="sqlite:./prisma/dev.db"

# MySQL (production)
# DATABASE_URL="mysql://user:password@localhost:3306/gmail_client"

# PostgreSQL
# DATABASE_URL="postgresql://user:password@localhost:5432/gmail_client"

# MongoDB
# DATABASE_URL="mongodb+srv://user:password@cluster.mongodb.net/gmail_client"

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# OPTIONAL: REDIS (pour caching)
# ========================================
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ========================================
# OPTIONAL: AWS S3 (pour stocker les emails)
# ========================================
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=yyy
# AWS_BUCKET_NAME=gmail-client-emails

# ========================================
# OPTIONAL: SMTP (pour envoyer des notifications)
# ========================================
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@gmail-client.app

# ========================================
# OPTIONAL: LOGGING
# ========================================
# LOG_LEVEL=info
